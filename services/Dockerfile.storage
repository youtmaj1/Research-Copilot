# Storage Service Dockerfile
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.storage.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.storage.txt

# Copy service code
COPY services/storage_service.py .

# Create non-root user
RUN useradd --create-home --shell /bin/bash app && chown -R app:app /app
USER app

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8004/health || exit 1

EXPOSE 8004

CMD ["python", "-m", "uvicorn", "storage_service:app", "--host", "0.0.0.0", "--port", "8004"]
